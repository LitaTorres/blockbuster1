<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<div id="movies">
  <% @movies.each do |movie| %>
  <div id="<%= dom_id movie %>">
    <p>
      <strong>Title:</strong>
      <%= movie.title %>
    </p>
  
    <p>
      <strong>Customer:</strong>
      <%= movie.customer.name %>
    </p>
  </div>
  
    <p>
      <%= link_to "Show this movie", movie %>
    </p>
  <% end %>
</div>

<%= link_to "New movie", new_movie_path %>
